{
  "name": "rightrun",
  "displayName": "RightRun",
  "description": "Add powerful file permission and execution actions to VS Code",
  "version": "0.0.1",
  "publisher": "TinkerCode",
  "private": true,
  "engines": {
    "vscode": "^1.96.0",
    "cursor": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:rightrun.makeExecutable",
    "onCommand:rightrun.removeExecutable",
    "onCommand:rightrun.showPermissions"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "submenus": [
      {
        "id": "rightrun.fileTools",
        "label": "File Tools"
      }
    ],
    "commands": [
      {
        "command": "rightrun.makeExecutable",
        "title": "Enable Executable",
        "category": "RightRun"
      },
      {
        "command": "rightrun.removeExecutable",
        "title": "Disable Executable",
        "category": "RightRun"
      },
      {
        "command": "rightrun.duplicateFile",
        "title": "Duplicate",
        "category": "RightRun"
      },
      {
        "command": "rightrun.duplicateWithTimestamp",
        "title": "Timestamped Duplicate",
        "category": "RightRun"
      },
      {
        "command": "rightrun.showPermissions",
        "title": "Show Permissions",
        "category": "RightRun"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "rightrun.fileTools",
          "group": "zzz"
        }
      ],
      "rightrun.fileTools": [
        {
          "command": "rightrun.makeExecutable",
          "when": "isFileSystemResource && !explorerResourceIsFolder",
          "group": "1_executable"
        },
        {
          "command": "rightrun.removeExecutable",
          "when": "isFileSystemResource && !explorerResourceIsFolder",
          "group": "1_executable"
        },
        {
          "command": "rightrun.showPermissions",
          "when": "isFileSystemResource",
          "group": "1_executable"
        },
        {
          "command": "rightrun.duplicateFile",
          "when": "isFileSystemResource && !explorerResourceIsFolder",
          "group": "2_other"
        },
        {
          "command": "rightrun.duplicateWithTimestamp",
          "when": "isFileSystemResource && !explorerResourceIsFolder",
          "group": "2_other"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maawad/RightRun.git"
  },
  "icon": "resources/icon.png"
}